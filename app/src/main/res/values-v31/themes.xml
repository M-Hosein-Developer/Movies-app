<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.Movies" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>

        <item name="android:colorBackground">?attr/colorOnPrimary</item>

        <item name="android:windowDisablePreview">true</item>


        //splash
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/popcorn</item>

    </style>
</resources>